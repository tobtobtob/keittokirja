gem 'sass-rails', '~> 4.0.0'
gem 'protected_attributes'
gem 'uglifier', '>= 1.3.0'

gem 'coffee-rails', '~> 4.0.0'

gem 'therubyracer', platforms: :ruby

gem 'jquery-rails'

gem 'turbolinks'

gem 'jbuilder', '~> 1.2'

group :doc do
  gem 'sdoc', require: false
end

#BCryptiä käytetään salasanojen tallentamiseen kryptattuna
gem 'bcrypt-ruby', '~> 3.0.0', :require => 'bcrypt'

#paperclipiä käytetään kuvien lisäämiseen tietokantaan. Rmagick vastaa tallennettujen
#kuvien muokkaamisesta oikeaan kokoon.
gem "paperclip", :git => "git://github.com/thoughtbot/paperclip.git"
gem 'rmagick'

gem "cocaine", '=0.5'
